package methodi;
import java.util.Scanner;
public class zad2 {

	
	public static double trapezoidArea(double a, double b, double h) 
	{
			double S = ((a+b)/2)*h;
			return S;
	}
	
	public static void trapezoidAreaOutput (double a, double b, double h) 
	{
		
		System.out.println(trapezoidArea(a,b,h));
		
	}
	
	public static void main(String[] args) {
		Scanner inp = new Scanner (System.in);
		
		double a = inp.nextDouble();
		double b = inp.nextDouble();
		double h = inp.nextDouble();
		
		do 
		{
			System.out.println("Non-valid input. Try again: ");

			a = inp.nextDouble();
			b = inp.nextDouble();
			h = inp.nextDouble();
		}
		
		while (a<=0 || b<=0 || h<=0 );
		
		trapezoidAreaOutput (a,b,h);
		
		
	}

}
